#!/bin/bash
# Use this for your user data (script from top to bottom)

# Update the system and install httpd (Linux 2 version)
echo -e "\e[1;35mUpdating system...\e[0m"
yum update -y

echo -e "\e[1;35mInstalling httpd...\e[0m"
yum install -y httpd

# Start and enable the httpd service
echo -e "\e[1;35mStarting httpd service...\e[0m"
systemctl start httpd

echo -e "\e[1;35mEnabling httpd service to start on boot...\e[0m"
systemctl enable httpd

# Create a detailed and appealing HTML page with skyblue background and black text
echo -e "\e[1;35mCreating a stylish Hello World page...\e[0m"

cat > /var/www/html/index.html <<EOL
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            text-align: center;
            background-color: skyblue;
            margin: 0;
            padding: 0;
            color: white;
        }
        header {
            background-color: #333;
            color: white;
            padding: 1em;
        }
        h1 {
            color: white;
        }
        p {
            color: #555;
            font-size: 1.2em;
        }
        footer {
            background-color: #333;
            color: white;
            padding: 1em;
            position: absolute;
            bottom: 0;
            width: 100%;
        }
        title {
            color: #ccc;
        }    
    </style>
    <title>acloudguy labs</title>
</head>
<body>
    <header>
        <h1>Hello World from $(hostname -f)</h1>
    </header>
    <main>
        <p>Welcome to this awesome website hosted on this EC2 instance for cloudfront labs !</p>
    </main>
    <footer>
        <p>Generated by acloudguy.in</p>
    </footer>
</body>
</html>
EOL

echo -e "\e[1;32mScript execution completed successfully!\e[0m"

# Create a simple HTML page (index2.html) with a light green background and dark text
echo -e "\e[1;35mCreating a simple second page (index2.html)...\e[0m"

cat > /var/www/html/index2.html <<EOL
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            text-align: center;
            background-color: lightgreen;
            margin: 0;
            padding: 0;
            color: #333;
        }
        h1 {
            color: #333;
        }
    </style>
    <title>Second Web Page</title>
</head>
<body>
    <h1>This is a simple page hosted on EC2 generated by index2.html</h1>
    <p>This is for failover from s3 to EC2 if the index2.html is not found on s3</p>
</body>
</html>
EOL

echo -e "\e[1;32mScript execution completed successfully!\e[0m"
